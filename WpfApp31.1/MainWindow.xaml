<Window x:Class="WpfApp31._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp31._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <StackPanel>
        <Label Name="lblTime" Content="00.00" FontSize="50" HorizontalAlignment="center"/>
        <Button Name="btnStart" Margin="10" Height="50" Content="START" FontSize="30" FontWeight="ExtraBold" Click="btnStart_Click"/>
        <Button Name="btnStop" Margin="10" Height="50" Content="STOP" FontSize="30" FontWeight="ExtraBold" Click="btnStop_Click"/>
        <Button Name="btnReStart" Margin="10" Height="50" Content="RESTART" FontSize="30" FontWeight="ExtraBold" Click="btnReStart_Click"/>
    </StackPanel>
</Window>
